//Ap using negative sign

#include<stdio.h>
#include<conio.h>

int main(){
	//varible declaration
	int n,i,sum=0,sign=-1;
	
	//user input
	printf("Enter the number: ");
	scanf("%d",&n);
	
	//logic
	for(i=1;i<=n;i=i+2){
		sign=-sign;
		sum=sum+i*sign;
	}
	
	//print the output
	printf("Sum is: %d",sum);
	return 0;
}
